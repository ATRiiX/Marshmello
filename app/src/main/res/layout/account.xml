<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="150dp"
            app:cardCornerRadius="60dp"
            >

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/person" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="Ada \n\n肤质：干性" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#7ccdc6">

        </RelativeLayout>


    </FrameLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:stretchColumns="1,2,3,4,5,6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <View
            android:layout_height="10dip" />

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <Button
            android:id="@+id/button_record"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:paddingLeft="20dip"
            android:paddingRight="20dp"
            android:text="      历史检测记录"
            android:textAlignment="viewStart" />

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <Button
            android:id="@+id/button_fav"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_star_border_black_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:paddingLeft="20dip"
            android:paddingRight="20dp"
            android:text="      我的收藏"
            android:textAlignment="viewStart" />

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <Button
            android:id="@+id/my_noti"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_notifications_black_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:paddingLeft="20dip"
            android:paddingRight="20dp"
            android:text="      我的通知"
            android:textAlignment="viewStart" />

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <View android:layout_height="30dip" />

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <Button
            android:id="@+id/my_set"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_settings_black_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:paddingLeft="20dip"
            android:paddingRight="20dp"
            android:text="      设置"
            android:textAlignment="viewStart" />

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <View android:layout_height="30dip" />

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <Button
            android:id="@+id/log_out"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:paddingLeft="20dip"
            android:paddingRight="20dp"
            android:text="      退出登录"
            android:textAlignment="viewStart" />

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />
    </TableLayout>


</android.support.constraint.ConstraintLayout>