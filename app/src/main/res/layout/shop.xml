<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:id="@+id/textShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingTop="40dp"
                    android:paddingBottom="20dp"
                    android:text="推荐产品"
                    android:textColor="#202020"
                    android:textSize="25dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:id="@+id/imageViews1"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@mipmap/item_1_pic" />

                        <TextView
                            android:id="@+id/textViews1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="5dp"
                            android:text="芙丽芳丝洗面奶" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View android:layout_width="20dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViews2"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@mipmap/item_2_pic" />

                        <TextView
                            android:id="@+id/textViews2"
                            android:layout_width="161dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="5dp"
                            android:text="OLAY金纯活肤乳" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:id="@+id/imageViews3"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@mipmap/item_3_pic" />

                        <TextView
                            android:id="@+id/textViews3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="5dp"
                            android:text="珂润润浸保湿乳液" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View android:layout_width="20dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/item_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViews4"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@mipmap/item_4_pic" />

                        <TextView
                            android:id="@+id/textViews4"
                            android:layout_width="161dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="5dp"
                            android:text="自然堂雪域滋润乳液" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:id="@+id/item_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:id="@+id/imageViews5"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@mipmap/item_5_pic" />

                        <TextView
                            android:id="@+id/textViews5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="5dp"
                            android:text="倩碧黄油无油乳液" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View android:layout_width="20dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/item_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViews6"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@mipmap/item_6_pic" />

                        <TextView
                            android:id="@+id/textViews6"
                            android:layout_width="161dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="5dp"
                            android:text="珀莱雅水动力活能水" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </TableRow>


        </TableLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>