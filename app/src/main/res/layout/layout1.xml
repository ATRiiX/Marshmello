<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#7ccdc6">

                <TextView
                    android:id="@+id/textAda"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="90sp"
                    android:text="ADA,\n今天\n还米有测肤质哦"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageAda"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"

                    android:layout_marginBottom="0dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/person" />
            </RelativeLayout>


            <Button
                android:id="@+id/button_test"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/shape_all_round_corner"
                android:text="去测试"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000" />

        </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:id="@+id/textTips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="30dp"
                        android:paddingBottom="10dp"
                        android:text="护肤Tips："
                        android:textColor="#202020"
                        android:textSize="25dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/tip1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            >

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                app:srcCompat="@mipmap/person3" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:text="选择合适的洁面乳" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    " />

                    <android.support.v7.widget.CardView

                        android:id="@+id/tip2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                app:srcCompat="@mipmap/hufu_1" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="161dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:text="温和清洁皮肤" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <android.support.v7.widget.CardView

                        android:id="@+id/tip3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            >

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                app:srcCompat="@mipmap/hufu_5" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:text="在洗脸时滋润皮肤" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    " />

                    <android.support.v7.widget.CardView

                        android:id="@+id/tip4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                app:srcCompat="@mipmap/hufu_3" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="161dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:text="化妆水的使用" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <android.support.v7.widget.CardView

                        android:id="@+id/tip5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            >

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                app:srcCompat="@mipmap/hufu_4" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:text="如何正确地洗脸" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    " />

                    <android.support.v7.widget.CardView

                        android:id="@+id/tip6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                app:srcCompat="@mipmap/hufu_2" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="161dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:text="如何了解自己的肤质" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </TableRow>


            </TableLayout>
        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>